<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<StackPane fx:id="rootStack" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="Controlador">

    <!-- Vista principal -->
    <AnchorPane fx:id="vistaPrincipal" prefWidth="600" prefHeight="400" style="-fx-background-color: white;">
        <Button text="Mostrar carrito" layoutX="250" layoutY="180" onAction="#mostrarCarrito"/>
    </AnchorPane>

    <!-- Carrito emergente -->
    <AnchorPane fx:id="panelCarrito" visible="false" prefWidth="400" prefHeight="300"
                style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2;">
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50">
            <Label text="Carrito de compras" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Button text="Cerrar carrito" onAction="#ocultarCarrito"/>
        </VBox>
    </AnchorPane>

</StackPane>
